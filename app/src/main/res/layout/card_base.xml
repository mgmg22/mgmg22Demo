<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/card_line"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_ghid"
                style="@style/NormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="sx1410143843" />

            <com.google.mgmg22demo.widget.CornerLabelView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:clvFillColor="#F44336"
                app:clvFlags="right"
                app:clvPaddingBottom="3dp"
                app:clvPaddingCenter="3dp"
                app:clvPaddingTop="10dp"
                app:clvText1="审核通过"
                app:clvText2Height="10dp" />
        </FrameLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>